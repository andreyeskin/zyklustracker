                        android:textColor="@android:color/black"
                        android:backgroundTint="@android:color/white"
                        app:cornerRadius="40dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginBottom="8dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnGut"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ð Gut"
                        android:textColor="@android:color/black"
                        android:backgroundTint="@android:color/white"
                        app:cornerRadius="40dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginBottom="8dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnMittelStimmung"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ð Mittel"
                        android:textColor="@android:color/black"
                        android:backgroundTint="@android:color/white"
                        app:cornerRadius="40dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginBottom="8dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnSchlecht"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ð Schlecht"
                        android:textColor="@android:color/black"
                        android:backgroundTint="@android:color/white"
                        app:cornerRadius="40dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginBottom="8dp" />

                </com.google.android.flexbox.FlexboxLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/textBegleitsymptome"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Begleitsymptome"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/chipGroupSymptome"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:singleSelection="false"
                    app:chipSpacing="8dp">

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipKopf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Kopfschmerzen"
                        android:checkable="true" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipÃbelkeit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ãbelkeit"
                        android:checkable="true" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipMÃ¼digkeit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="MÃ¼digkeit"
                        android:checkable="true" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipRÃ¼cken"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="RÃ¼ckenschmerzen"
                        android:checkable="true" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipBrÃ¼ste"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="empfindliche BrÃ¼ste"
                        android:checkable="true" />

                </com.google.android.material.chip.ChipGroup>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="12dp">

            <LinearLayout
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/textLetzteEintraege"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Letzte EintrÃ¤ge"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/textDummyEintrag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="28.05.2025\nBlutung: Mittel\nSchmerzen: Krampfartig\nStimmung: Gut\nBegleitsymptome: MÃ¼digkeit, empfindliche BrÃ¼ste"
                    android:textSize="14sp" />

                <!-- Optional: Button spÃ¤ter -->
                <!-- <TextView android:text="Mehr anzeigen" .../> -->

            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            android:backgroundTint="#FFF6D9">

            <LinearLayout
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/textInfoTitel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Wusstest du schon?"
                    android:textStyle="bold"
                    android:drawableStart="@android:drawable/ic_dialog_info"
                    android:drawablePadding="8dp"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/textInfoInhalt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Deine Symptome kÃ¶nnen dir Hinweise auf hormonelle VerÃ¤nderungen geben. Durch regelmÃ¤Ãiges Eintragen erkennst du Muster, die dir helfen, deinen Zyklus besser zu verstehen."
                    android:textSize="14sp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/textMehr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mehr anzeigen"
                    android:textColor="#D81B60"
                    android:textStyle="bold"
                    android:textSize="14sp" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        app:menu="@menu/bottom_nav_menu"
        app:labelVisibilityMode="labeled" />
</LinearLayout>

