<?xml version="1.0" encoding="utf-8"?>
<!--
    Dialog-Layout fÃ¼r detaillierte Chart-Informationen

    Verwendung:
    - Wird angezeigt wenn Benutzer auf Kreisdiagramm-Sektor klickt
    - Zeigt detaillierte Statistiken mit Icons und Fortschrittsbalken
    - SchÃ¶nes Material Design mit abgerundeten Ecken

    Design-Features:
    - Emoji-Anzeige fÃ¼r Kategorien
    - Statistische Karten mit Icons
    - Motivierende Nachricht unten
    - Moderne Farbgebung mit Gradienten
-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/dialog_background_rounded"
    android:padding="20dp"
    android:clipToPadding="false">

    <!-- Header mit Emoji und Kategorie-Name -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="16dp">

        <!-- Kategorie-Emoji (wird programmatisch gesetzt) -->
        <TextView
            android:id="@+id/text_category_emoji"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ˜Š"
            android:textSize="32sp"
            android:layout_marginEnd="12dp" />

        <!-- Kategorie-Name -->
        <TextView
            android:id="@+id/text_category_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Keine"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#333333" />

        <!-- SchlieÃŸen-Button -->
        <ImageView
            android:id="@+id/btn_close_dialog"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@android:drawable/ic_menu_close_clear_cancel"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:padding="4dp"
            android:contentDescription="Dialog schlieÃŸen" />
    </LinearLayout>

    <!-- Statistik-Karten Container  -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="12dp"
        android:padding="8dp"
        android:clipToPadding="false">

        <!-- Erste Reihe: Anzahl Tage und Prozentsatz -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <!-- Anzahl Tage Karte -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp"
                android:backgroundTint="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:gravity="center">

                    <!-- Statistik-Icon -->
                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_marginBottom="8dp"
                        android:src="@drawable/ic_nav_statistik"
                        app:tint="#2196F3" />

                    <!-- Label -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:text="Anzahl Tage"
                        android:textColor="#666666"
                        android:textSize="12sp"
                        android:gravity="center" />

                    <!-- Wert -->
                    <TextView
                        android:id="@+id/text_day_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2"
                        android:textColor="#2196F3"
                        android:textSize="28sp"
                        android:textStyle="bold"
                        android:gravity="center" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Prozentsatz Karte -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp"
                android:backgroundTint="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:gravity="center">

                    <!-- Prozent-Icon -->
                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_marginBottom="8dp"
                        android:src="@drawable/show_chart"
                        app:tint="#E91E63" />

                    <!-- Label -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:text="Prozentsatz"
                        android:textColor="#666666"
                        android:textSize="12sp"
                        android:gravity="center" />

                    <!-- Wert -->
                    <TextView
                        android:id="@+id/text_percentage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="28,6%"
                        android:textColor="#E91E63"
                        android:textSize="28sp"
                        android:textStyle="bold"
                        android:gravity="center" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <!-- Zweite Reihe: Gesamtanzahl -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="2dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="6dp"
            android:backgroundTint="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="20dp"
                android:gravity="center_vertical">

                <!-- Kalender-Icon -->
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="16dp"
                    android:src="@drawable/ic_nav_zyklus"
                    app:tint="#FF9800" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <!-- Label -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:text="Von insgesamt"
                        android:textColor="#666666"
                        android:textSize="14sp" />

                    <!-- Wert -->
                    <TextView
                        android:id="@+id/text_total_entries"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="7 EintrÃ¤gen"
                        android:textColor="#FF9800"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <!-- Motivations-Nachricht -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        android:backgroundTint="#E8F5E8">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="20dp"
            android:gravity="center_vertical">

            <!-- Sterne-Emoji -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸŒŸ"
                android:textSize="24sp"
                android:layout_marginEnd="16dp" />

            <!-- Motivations-Text -->
            <TextView
                android:id="@+id/text_motivation_message"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Schmerzfreie Tage! Du hattest keine spÃ¼rbaren Beschwerden."
                android:textSize="15sp"
                android:textColor="#2E7D32"
                android:lineSpacingExtra="3dp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- OK-Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_dialog_ok"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="8dp"
        android:text="OK"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:textSize="16sp"
        app:backgroundTint="#D81B60"
        app:cornerRadius="26dp"
        android:elevation="4dp" />

</LinearLayout>